{
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "dist",
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": true,
		"noImplicitAny": false
	},
	"exclude": [
		"node_modules",
		"build"
	],
	"atom": {
		"rewriteTsconfig": false
	}
}
